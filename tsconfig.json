{
  "compilerOptions": {
    "target": "ES2023",
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowJs": true,
    "declaration": true,
    "outDir": "./out/",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@h1z1-server/*": ["../*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "experimentalDecorators": true,
    "types": ["node"]
  },
  "include": ["src/", "tests/"],
  "exclude": [
    "node_modules/",
    "out/",
    "tests_out/",
    "benchmarks_out/",
    "bin/*.exe",
    ".vs/",
    "config.yaml"
  ]
}
